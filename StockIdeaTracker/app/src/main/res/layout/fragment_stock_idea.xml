<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/stock_idea_ticker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stock_idea_ticker_label"/>

    <EditText
        android:id="@+id/stock_idea_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_ticker_label"
        android:text="@string/stock_idea_ticker"/>

    <Button
        android:id="@+id/validate_symbol_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_ticker"
        android:text="@string/validate_symbol_button"/>

    <TextView
        android:id="@+id/stock_idea_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_ticker"
        android:text="@string/stock_idea_title_label"/>

    <TextView
        android:id="@+id/stock_idea_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stock_idea_title"
        android:layout_below="@+id/stock_idea_ticker"
        android:layout_toRightOf="@+id/stock_idea_title_label"/>

    <TextView
        android:id="@+id/stock_idea_creation_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_title_label"
        android:text="@string/stock_idea_creation_date_label"/>

    <TextView
        android:id="@+id/stock_idea_creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_title_label"
        android:layout_toRightOf="@+id/stock_idea_creation_date_label"
        android:text="@string/stock_idea_creation_date"/>
    <TextView
        android:id="@+id/stock_idea_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_creation_date"
        android:text="@string/stock_idea_description_label"/>

    <EditText
        android:id="@+id/stock_idea_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_description_label"
        android:text="@string/stock_idea_description"/>

    <ImageView
        android:id="@+id/stock_idea_thumbnail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stock_idea_description"
        android:src="@drawable/jet"/>

    <TextView
        android:id="@+id/stock_idea_coordinates_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_thumbnail"
        android:text="@string/stock_idea_coordinates_label"/>

    <TextView
        android:id="@+id/stock_idea_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_thumbnail"
        android:layout_toRightOf="@+id/stock_idea_coordinates_label"
        android:text="@string/stock_idea_coordinates"/>

    <TextView
        android:id="@+id/stock_idea_purchase_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_coordinates_label"
        android:text="@string/stock_idea_purchase_price_label"/>

    <TextView
        android:id="@+id/stock_idea_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_coordinates_label"
        android:layout_toRightOf="@+id/stock_idea_purchase_price_label"
        android:text="@string/stock_idea_purchase_price"/>

    <TextView
        android:id="@+id/stock_idea_number_of_stock_purchased_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_purchase_price_label"
        android:text="@string/stock_idea_number_of_stock_purchased_label"/>

    <TextView
        android:id="@+id/stock_idea_number_of_stock_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_purchase_price"
        android:layout_toRightOf="@+id/stock_idea_number_of_stock_purchased_label"
        android:text="@string/stock_idea_number_of_stock_purchased"/>

    <TextView
        android:id="@+id/stock_idea_total_purchase_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_number_of_stock_purchased_label"
        android:text="@string/stock_idea_total_purchase_price_label"/>

    <TextView
        android:id="@+id/stock_idea_total_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_number_of_stock_purchased"
        android:layout_toRightOf="@+id/stock_idea_total_purchase_price_label"
        android:text="@string/stock_idea_total_purchase_price"/>

    <TextView
        android:id="@+id/stock_purchase_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_total_purchase_price_label"
        android:text="@string/stock_purchase_date_label"/>

    <TextView
        android:id="@+id/stock_purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_total_purchase_price_label"
        android:layout_toRightOf="@+id/stock_purchase_date_label"
        android:text="@string/stock_purchase_date"/>

    <TextView
        android:id="@+id/stock_idea_current_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_purchase_date_label"
        android:text="@string/stock_idea_current_price_label"/>

    <TextView
        android:id="@+id/stock_idea_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_purchase_date_label"
        android:layout_toRightOf="@+id/stock_idea_current_price_label"
        android:text="@string/stock_idea_current_price"/>

    <TextView
        android:id="@+id/stock_idea_total_current_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_current_price_label"
        android:text="@string/stock_idea_total_current_value_label"/>

    <TextView
        android:id="@+id/stock_idea_total_current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_current_price_label"
        android:layout_toRightOf="@+id/stock_idea_total_current_value_label"
        android:text="@string/stock_idea_total_current_value"/>
    <Button
        android:id="@+id/stock_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_idea_current_price_label"
        android:text="@string/stock_purchase_button"/>

</RelativeLayout>